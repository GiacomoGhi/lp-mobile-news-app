<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/black">

    <!-- Currency Pair -->
    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="AUD"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percentage_change"/>

    <!-- Symbol -->
    <TextView
        android:id="@+id/currency_pair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="AUDUSD.r"
        android:textColor="#CACACA"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symbol"/>

    <!-- Percentage Change -->
    <TextView
        android:id="@+id/percentage_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="+0.31%"
        android:textColor="#00FF00"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <!-- Ask Price -->
    <TextView
        android:id="@+id/ask_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/bid_price"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bid Price -->
    <TextView
        android:id="@+id/bid_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:maxWidth="100dp"
        android:textColor="#FF0000"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Low Price -->
    <TextView
        android:id="@+id/low_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="L: 0.66528"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/high_price"
        app:layout_constraintEnd_toStartOf="@+id/high_price" />

    <!-- High Price -->
    <TextView
        android:id="@+id/high_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="H: 0.66768"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/bid_price"
        app:layout_constraintEnd_toEndOf="@+id/bid_price"/>

</androidx.constraintlayout.widget.ConstraintLayout>